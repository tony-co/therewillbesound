{% extends 'vendor/carew/theme-bootstrap/layouts/default.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="http://fonts.googleapis.com/css?family=EB+Garamond" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="{{ carew.relativeRoot }}/css/style.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-31079469-1', 'auto');
  ga('send', 'pageview');

</script>
{% endblock %}

{% block content_header %}
    <div class="page-header">
        <h1><a class="" href="{{ carew.relativeRoot }}">{{ carew.site.title|default('') }}</a></h1>
        <ul class="list-inline pull-right">
            {% if carew.navigations.main is defined %}
                {% for document in carew.navigations.main %}
                    <li{% if document.path == carew.currentPath %} class="active"{% endif %}><a href="{{ render_document_path(document) }}">{{ render_document_title(document) }}</a></li>
                {% endfor %}
            {% endif %}
        </ul>
    </div>
{% endblock %}
