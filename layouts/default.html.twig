{% extends 'vendor/carew/theme-bootstrap/layouts/default.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="http://fonts.googleapis.com/css?family=EB+Garamond" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="{{ carew.relativeRoot }}/css/style.css">
{% endblock %}

{% block content_header %}
    <div class="page-header">
        <h1><a class="" href="{{ carew.relativeRoot }}">{{ carew.site.title|default('') }}</a></h1>
        <ul class="list-inline pull-right">
            {% if carew.navigations.main is defined %}
                {% for document in carew.navigations.main %}
                    <li{% if document.path == carew.currentPath %} class="active"{% endif %}><a href="{{ render_document_path(document) }}">{{ render_document_title(document) }}</a></li>
                {% endfor %}
            {% endif %}
        </ul>
    </div>
{% endblock %}
